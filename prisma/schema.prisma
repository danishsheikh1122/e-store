generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id         Int    @id @default(autoincrement())
  userNumber String @unique
  password   String
}

// Admin schema
model Admin {
  id       Int       @id @default(autoincrement())
  name     String
  UID      String    @unique
  password String
  products Product[]
}

// Product schema
model Product {
  id          Int     @id @default(autoincrement())
  productName String
  price       Float
  MRP         Float
  description String
  images      Image[] // Use a relation to Image model instead of array of strings
  admin       Admin   @relation(fields: [adminId], references: [id])
  adminId     Int
}

// Image schema
model Image {
  id        Int     @id @default(autoincrement())
  path       String // URL or path to the image
  productId Int // Foreign key to Product
  product   Product @relation(fields: [productId], references: [id])
}
