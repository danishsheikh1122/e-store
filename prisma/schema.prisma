generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users{
  id Int @id @default(autoincrement())
  userNumber String @unique
  password String 
}

// Admin schema
model Admin {
  id        Int      @id @default(autoincrement())
  name      String
  UID       String   @unique
  password  String
  products  Product[]
}

// Product schema with Cloudinary image URLs
model Product {
  id          Int      @id @default(autoincrement())
  productName String
  price       Float
  MRP         Float
  description String
  cloudinaryImages CloudinaryImage[]
  admin       Admin    @relation(fields: [adminId], references: [id])
  adminId     Int
}

// CloudinaryImage model
model CloudinaryImage {
  id        Int      @id @default(autoincrement())
  url       String   // URL or metadata reference from Cloudinary
  product   Product  @relation(fields: [productId], references: [id])
  productId Int
}
